{
  "type": "view",
  "$$$content": [
    {
      "type": "panel",
      "heading": "Contact Form",
      "$$$body": {
        "type": "form",
        "className": "form-horizontal",
        "$$$controls": [
          {
            "type": "formgroup",
            "label": {
              "value": "Name",
              "className": "col-md-4"
            },
            "controls": [
              {
                "wrapClass": "col-md-4",
                "$$$control": {
                  "type": "text",
                  "name": "name.first",
                  "attrs": {
                    "placeholder": "First"
                  },
                  "defaultValue": "Lasana"
                }
              },
              {
                "wrapClass": "col-md-4",
                "$$$control": {
                  "type": "text",
                  "name": "name.last",
                  "attrs": {
                    "placeholder": "Last"
                  },
                  "defaultValue": "Murray"
                }
              }
            ]
          },
          {
            "type": "formgroup",
            "label": {
              "value": "When can we talk?",
              "className": "col-md-4"
            },
            "controls": [
              {
                "wrapClass": "col-md-8",
                "$$$control": {
                  "type": "date",
                  "name": "proposedMeetingDate"
                }
              }
            ]
          },
          {
            "type": "formgroup",
            "label": {
              "value": "Gender",
              "className": "col-md-4"
            },
            "controls": [
              {
                "wrapClass": "col-md-8",
                "$$$control": {
                  "name": "gender",
                  "type": "radio",
                  "options": [
                    {
                      "label": "Male",
                      "value": "M"
                    },
                    {
                      "label": "Female",
                      "value": "F"
                    }
                  ]
                }
              }
            ]
          },
          {
            "type": "formgroup",
            "label": {
              "value": "What service are you interested in?",
              "className": "col-md-4"
            },
            "controls": [
              {
                "wrapClass": "col-md-8",
                "$$$control": {
                  "type": "select",
                  "name": "service",
                  "options": [
                    {
                      "label": "Software Development",
                      "value": "Software Development"
                    },
                    {
                      "label": "IT Return On Investment Analysis",
                      "value": "ROI Analysis"
                    },
                    {
                      "label": "E-Commerce",
                      "value": "E-Commerce"
                    }
                  ],
                  "defaultValue": "E-Commerce"
                }
              }
            ]
          },
          {
            "type": "formgroup",
            "label": {
              "value": "About You",
              "className": "col-md-4"
            },
            "controls": [
              {
                "wrapClass": "col-md-8",
                "$$$control": {
                  "type": "textarea",
                  "name": "aboutYou",
                  "attrs": {
                    "rows": 6
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "type": "panel",
      "heading": "A profile",
      "$$$body": [
        {
          "type": "dl",
          "labels": [
            {
              "label": "First Name",
              "name": "name.first",
              "$$filter": "uppercase"
            },
            {
              "label": "Last Name",
              "name": "name.last",
              "$$filter": "uppercase"
            }
          ],
          "data": {
            "name": {
              "first": "Serious",
              "last": "Business"
            }
          }
        }
      ]
    },
    {
      "type": "panel",
      "className":"panel-warning",
      "heading": "A table in a panel",
      "$$$table": [
        {
          "type": "table",
          "columns": [
            {
              "label": "First Name",
              "name": "name.first",
              "$$filter": "uppercase"
            },
            {
              "label": "Last Name",
              "name": "name.last",
              "$$filter": "uppercase"
            }
          ],
          "data": [
            {
              "name": {
                "first": "mel",
                "last": "lentils"
              }
            },
            {
              "name": {
                "first": "reD",
                "last": "Bean"
              }
            }
          ]
        }
      ]
    }
  ]
}

